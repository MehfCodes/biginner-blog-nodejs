 
 <div class="container">

    <div class="row" >

      <!-- Post Content Column -->
      <div class="col-lg-8">
{{#each posts}}
        <!-- Title -->
        <h1 class="mt-4">{{title}}</h1>

        <!-- Author -->
        
        <!-- Date/Time -->

        <p>Posted on {{postDate date 'MMMM Do YYYY'}}</p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" src="/Upload/{{file}}" alt="">

        <br />
        <br />

        <!-- Post Content -->
        <p class="lead">{{text}}</p>

        <a class="btn btn-primary" href="/home/post/{{id}}">Read More</a>
        <hr>
{{/each}}
        <!-- Comments Form -->
        
      
        <!-- Sidebar Widgets Column -->
        
      <div class="col-md-4" style="float: right">

        <!-- Search Widget -->
        <div class="card my-4">
          <h5 class="card-header">Search</h5>
          <div class="card-body">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-secondary" type="button">Go!</button>
              </span>
            </div>
          </div>
        </div>

        <!-- Categories Widget -->
        {{>Client/category}}
        <!-- Side Widget -->
        <div class="card my-4">
          <h5 class="card-header">Side Widget</h5>
          <div class="card-body">
            You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
          </div>
        </div>

      </div>

    </div>
    <!-- /.row -->

  </div>

    

 